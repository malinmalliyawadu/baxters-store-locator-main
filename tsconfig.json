{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2018", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "outDir": "dist/",
    "baseUrl": "src/"
  },
  "exclude": ["node_modules", "dist"]
}
